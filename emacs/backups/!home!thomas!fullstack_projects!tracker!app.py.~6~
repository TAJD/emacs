
import streamlit as st
from multipage import MultiPage

from pages import timeseries, workouts
from pages.utils import get_git_hash

app = MultiPage()

st.title("Tracker")

app.add_page("Workouts", workouts.app)
app.add_page("Time series", timeseries.app)

app.run()

hide_footer_style = """
<style>
.reportview-container .main footer {visibility: hidden;}
</style>   
"""
st.markdown(hide_footer_style, unsafe_allow_html=True)

git_msg = get_git_hash()
    
st.text("Most recent git message: {}".format(git_msg))
