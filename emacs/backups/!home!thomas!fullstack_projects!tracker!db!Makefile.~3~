ROOT_DIR := $(shell dirname $(realpath $(lastword $(MAKEFILE_LIST))))
DB_DIR   := $(ROOT_DIR)/db
LOGS_DIR := $(DB_DIR)/logs
DATABASE := trackerdb

.PHONY: test
test:
	which psql || exit 1
	psql -d "$(DATABASE)" < "$(ROOT_DIR)/schema.sql"
	psql -d "$(DATABASE)" < "$(ROOT_DIR)/data.sql"
	psql -d "$(DATABASE)" < "$(ROOT_DIR)/tests.sql"
